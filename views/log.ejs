                                        <li><input type="text" name="email"> <label>ایمیل*</label></li>

                                        <li><textarea rows="3" cols="50" name="content"></textarea></li>
                                        <li><input type="submit" value="ارسال پیام"></li>
                                    </ul>
                                </form>
                            </article>
                        </article>
                    </div>
